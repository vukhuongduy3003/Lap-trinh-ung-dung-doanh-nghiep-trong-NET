@model IEnumerable<TuLam_de3.Models.KetQua>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Tìm kiếm nhân viên", "TimKiemNV") |
    @Html.ActionLink("Nhân viên có thành tiền thấp nhất", "TimKiem") 
</p>
<table class="table">
    <tr>
        <th>
            Mã nhân viên
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Họ tên nhân viên
        </th>
        <th>
            Thành tiền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhanVien.HoTenNV)
        </td>
        <td>
            @if(item.DonGia.HasValue && item.SoLuong.HasValue)
            {
                decimal ThanhTien = item.DonGia.Value * item.SoLuong.Value;
                @ThanhTien;
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id1= item.MaNV, id2=item.TenSP }) |
            @Html.ActionLink("Details", "Details", new { id1 = item.MaNV, id2 = item.TenSP }) |
            @Html.ActionLink("Delete", "Delete", new { id1 = item.MaNV, id2 = item.TenSP })
        </td>
    </tr>
}

</table>
